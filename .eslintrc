{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "config": true,
    "tracer": true
	},
  "rules": {
    "no-param-reassign": 0,
    "no-extra-semi": 1,
    "semi": [ 1, "never" ],
    "comma-dangle": [ 1, "only-multiline" ],
    "no-undef": 2,
    "no-else-return": 1,
    "no-cond-assign": 2,
    "no-native-reassign": 2,
    "no-multi-spaces": 1,
    "block-scoped-var": 2,
    "no-loop-func": 2,
    "no-trailing-spaces": 2,
    "key-spacing": [ 1, {
      "beforeColon": false,
      "afterColon": true,
      "mode": "strict"
    }],
    "comma-spacing": [ 1, {
      "before": false, "after": true
    }],
    "comma-style": [1, "last"],
    "block-spacing": [1, "always"],
    "object-curly-spacing": [1, "always"]
  }
}
